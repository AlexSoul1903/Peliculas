@model Persona
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Peliculas</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body class="bg-black">


		<div class="row">

			<div class="col-12 col-sm-12 col-md-6 offset-md-3 mt-3">

				<div class="card">

					<div class="card-header bg-danger text-light">
						<h4 class="text-center">Ingrese sus datos</h4>
					</div>

						<h5 class="card-title text-center mt-2">Complete todos los campos.</h5>

						<div class="card-body col-12 ">



							<div class="mb-3">
								<label for="email" class="form-label">Email:</label>
								<input id="email" type="text" class="form-control" asp-for="Correo">
							</div>

							<div class="mb-3">
								<label for="contraseña" class="form-label">Contraseña:</label>
								<input id="contraseña" type="text" class="form-control" asp-for="Clave">
							</div>

							<div>

						<button asp-for="Index" type="button" class="btn btn-outline-primary float-end"><a asp-controller="Home" asp-action="Index">Ingresar</a></button>
						<button type="button" class="btn btn-outline-dark float-end me-2"> <a class="text-black" asp-controller="Acceso" asp-action="Registrate"> Registrate</a></button>
							<button type="button" class="btn btn-outline-warning float-end me-3">Limpiar</button>
							</div>
						</div>
					</div>
				


			</div>

		</div>

		</div>
		</main>
		

	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

</body>


</html>
